<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FoodListActivity">

    <LinearLayout
        android:id="@+id/sortButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Kcal/cup"
            android:id="@+id/kcalButton"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:background="#a0000000"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Protein"
            android:id="@+id/proteinButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:background="#a0000000"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Carbohydr."
            android:id="@+id/carbohydratesButton"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="1dp"
            android:background="#a0000000"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sortButtons2"
        android:layout_below="@id/sortButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ash"
            android:id="@+id/ashButton"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:background="#a0000000"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fat"
            android:id="@+id/fatButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:background="#a0000000"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Fiber"
            android:id="@+id/fiberButton"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="1dp"
            android:background="#a0000000"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sortButtons2"
        android:id="@+id/recyclerView"/>

</RelativeLayout>
