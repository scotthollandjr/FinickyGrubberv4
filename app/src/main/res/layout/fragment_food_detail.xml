<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FoodDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="20dp"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:id="@+id/foodNameTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="40sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand Name"
                android:id="@+id/brandTextView"
                android:layout_below="@+id/foodNameTextView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="italic"
                android:textSize="25sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="18dp"
                android:paddingTop="20dp"
                android:paddingRight="18dp"
                android:id="@+id/linearLayout">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Grain Free"
                        android:textStyle="bold"
                        android:id="@+id/grainTextView"
                        android:textColor="@color/colorTextIcons"
                        android:textAlignment="textStart"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Manufactured in: Country"
                        android:textStyle="bold"
                        android:id="@+id/countryTextView"
                        android:textColor="@color/colorTextIcons"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="25sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20sp" >

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="Type: Type"
                        android:id="@+id/typeTextView"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="Age: Age"
                        android:id="@+id/ageTextView"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:text="000 Kcals/oz"
                        android:id="@+id/kcalTextView"
                        android:textColor="@color/colorTextIcons"
                        android:layout_gravity="right"
                        android:layout_alignParentTop="true"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp" >

                    <TextView
                        android:id="@+id/proteinText"
                        android:text="Protein: 10%"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="20sp"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/fatText"
                        android:text="Fat: 10%"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/fiberText"
                        android:text="Fiber: 10%"
                        android:textColor="@color/colorTextIcons"
                        android:textSize="20sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients:"
                    android:textColor="@color/colorTextIcons"
                    android:paddingTop="30dp"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients:"
                    android:id="@+id/ingredientsTextView"
                    android:textColor="@color/colorTextIcons"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="8sp"
                    android:textSize="20sp" />

            </LinearLayout>

             <RelativeLayout
                android:id="@+id/InnerRelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >


                 <Button
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Save food"
                     android:id="@+id/saveButton"
                     android:background="@color/colorAccent"
                     android:layout_marginLeft="8dp"
                     android:layout_marginRight="8dp"
                     android:layout_marginBottom="8dp"
                     android:layout_centerHorizontal="true" />

                </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
