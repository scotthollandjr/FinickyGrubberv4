<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guest.grubbery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="finicky grubber"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.DogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.grubbery.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.CatActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.grubbery.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.AccountActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.grubbery.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.ThankActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.grubbery.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.ResultListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.guest.grubbery.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.DictionaryActivity"></activity>
    </application>

</manifest>